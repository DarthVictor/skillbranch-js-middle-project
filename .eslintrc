{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals": {
    "__SERVER__": true,
    "__CLIENT__": true,
    "__PROD__": true,
    "__STAGE__": true,
    "__DEV__": true,
    "document": true,
    "window": true,
    "screen": true,
    "If": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {    
    "no-console": "off",
    "arrow-body-style": "off",
    "func-names": "warn",
    "no-param-reassign": "warn",
    "react/react-in-jsx-scope": "warn",
    "no-underscore-dangle": "warn",
    "global-require": "warn",
    "react/prop-types": "warn",
    "react/jsx-first-prop-new-line": "warn",
    "guard-for-in": "off",
    "no-restricted-syntax": ["error", "WithStatement"],
    "react/forbid-prop-types": "off",

    "import/no-extraneous-dependencies": ["error", { "packagePath": "./package.json" }],
    "no-unused-vars": "off",
    "comma-dangle": "off",
    "semi": "off",
    "linebreak-style": "off"
  }
}
